// Change the rules from warn to error when testing for production
{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "no-undef": "off",
    "no-useless-escape": "off"
  }
}